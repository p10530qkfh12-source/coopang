# 쿠팡 파트너스 API 자격 증명
# https://partners.coupang.com 에서 발급받으세요
COUPANG_ACCESS_KEY=your_access_key_here
COUPANG_SECRET_KEY=your_secret_key_here

# ============================================
# Rate Limiting 설정
# ============================================
# 요청 간 최소 지연 시간 (밀리초)
REQUEST_DELAY_MS=1000

# ============================================
# 재시도 설정 (Retry with Exponential Backoff)
# ============================================
# 최대 재시도 횟수 (0 = 재시도 안함)
MAX_RETRIES=3

# 기본 재시도 대기 시간 (밀리초)
BASE_RETRY_DELAY_MS=1000

# 최대 재시도 대기 시간 (밀리초)
MAX_RETRY_DELAY_MS=30000

# ============================================
# 타임아웃 설정
# ============================================
# API 요청 타임아웃 (밀리초)
TIMEOUT_MS=10000

# ============================================
# 서킷 브레이커 설정
# ============================================
# 서킷 오픈 임계값 (연속 실패 횟수)
CIRCUIT_BREAKER_THRESHOLD=5

# 서킷 리셋 대기 시간 (밀리초)
CIRCUIT_BREAKER_RESET_MS=60000

# ============================================
# 텔레그램 알림 설정
# ============================================
# 1. @BotFather에서 봇 생성 후 토큰 발급
# 2. 봇에게 메시지 보낸 후 getUpdates로 Chat ID 확인
#    https://api.telegram.org/bot<토큰>/getUpdates
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# 워드프레스 자동 포스팅 설정
# ============================================
# 1. 워드프레스 관리자 → 사용자 → 프로필
# 2. 애플리케이션 비밀번호 → 새 비밀번호 추가
# 3. 생성된 비밀번호 복사 (공백 포함)
WP_SITE_URL=https://your-blog.com
WP_USERNAME=your_username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
